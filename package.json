{
  "name": "local-proxy",
  "description": "Friendly middleware to proxy local files using browser-sync",
  "author": "Tim Osborn",
  "private": true,
  "devDependencies": {
    "babel-core": "^5.5.6",
    "browser-sync": "^2.2.1",
    "eazy-logger": "^2.1.2",
    "glob": "^7.0.3"
  },
  "scripts": {
    "start": "node index.js"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "browser": false
    },
    "ecmaFeatures": {
      "blockBindings": true,
      "arrowFunctions": true,
      "templateStrings": true
    },
    "parserOptions": {
      "ecmaVersion": 6
    },
    "rules": {
      "semi": [
        2,
        "never"
      ],
      "quotes": [
        2,
        "single"
      ],
      "curly": [
        2,
        "multi"
      ],
      "no-process-exit": 0,
      "comma-dangle": [
        2,
        "always-multiline"
      ]
    }
  },
  "version": "0.3.0"
}
